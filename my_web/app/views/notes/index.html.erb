<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Genre</th>
      <th>Title</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.genre %></td>
        <td><%= note.title %></td>
        <td><%= note.detail %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
      <div class="genre">
	Genre 1
      </div>
      <div class="rectangle">
	Rectangle
      </div>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
